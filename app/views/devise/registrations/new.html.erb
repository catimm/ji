<div class="intro-header"></div>
<div id="section wrap">
	<%= render 'layouts/header' %> 
	<div class="intro-header"></div>
	<div class="row"> 
		<div class="col-sm-4"></div>
		<div class="col-sm-4 box">
			<div class="row">
				<div class="col-sm-12">
						<h2 class="formSpace">Sign up</h2>
					    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<%- flash.each do |name, msg| -%>
							    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
							  <%- end -%>
							<div class="row formSpace"> 
								<div class="col-sm-1"></div>
								<div class="col-sm-10">
						      		<%= f.text_field :first_name, required: true, :class => "form-control", autofocus: true, placeholder: "First name" %>
								</div>
								<div class="col-sm-1"></div>
							</div>
							<div class="row formSpace"> 
								<div class="col-sm-1"></div>
								<div class="col-sm-10">
							 		<%= f.email_field :email, :class => "form-control", required: true, placeholder: "Email" %>
								</div>
								<div class="col-sm-1"></div>
							</div>
							<div class="row formSpace"> 
								<div class="col-sm-1"></div>
								<div class="col-sm-10">
							 		 <%= f.password_field :password, :class => "form-control", required: true, placeholder: "Password", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
								</div>
								<div class="col-sm-1"></div>
							</div>
							<div class="row formSpace"> 
								<div class="col-sm-1"></div>
								<div class="col-sm-10">
							 		<%= f.password_field :password_confirmation, :class => "form-control", required: true, placeholder: "Confirm password" %>
								</div>
								<div class="col-sm-1"></div>
							</div>
							<div class="row formSpace2"> 
								<div class="col-sm-1"></div>
								<div class="col-sm-10">
							 		<%= f.submit "Sign up", class: "btn btn-default btn-success longButton" %> 
								</div>
								<div class="col-sm-1"></div>
							</div>
					    <% end %> 
					  		<div class="row formSpace">
								<div class="col-sm-2"></div>
								<div class="col-sm-8">
									<h6 class="liStatement">By signing up you agree to our Terms of Use and Privacy Policy</h6>
								</div>
								<div class="col-sm-2"></div>
							</div>
					  </div> 
					</div>
					<div class="row formSpace3">
						<div class="col-sm-1"></div>
						<div class="col-sm-10">
							<div class="line"></div>
							<div class="lineText gray"> or </div>
						</div>
						<div class="col-sm-1"></div>
					</div>
					<div class="row">
						<div class="col-sm-1"></div>
						<div class="col-sm-10">
							<%= render "devise/shared/linkedinSignup" %>
						</div>
						<div class="col-sm-1"></div>
					</div>
					<div class="row formSpace">
						<div class="col-sm-3"></div>
						<div class="col-sm-6">
							<h6 class="liStatement">We'll never post anything to LinkedIn on your behalf</h6>
						</div>
						<div class="col-sm-3"></div>
					</div>
					<div class="row signupBox">
						<div class="col-sm-1"></div>
						<div class="col-sm-10">
							<h5 class="signupOffer">Have an account? </h5> <%= render "devise/shared/login" %>
						</div>
						<div class="col-sm-1"></div>
					</div>
			</div>
		</div>
		<div class="col-sm-4"></div>
	</div>
</div>
