<div class="intro-header"></div>
<div id="section wrap">
	<%= render 'layouts/header' %> 
	<div class="intro-header"></div>
	<div class="row"> 
		<div class="col-sm-4"></div>
		<div class="col-sm-4 box">
			<div class="row">
				<div class="col-sm-12">
						<h2 class="formSpace">Forgot your password?</h2>
					    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  							<%- flash.each do |name, msg| -%>
  								<%= f.error_notification %>
							<%- end -%>
							<div class="row formSpace"> 
								<div class="col-sm-1"></div>
								<div class="col-sm-10">
							 		<%= f.email_field :email, :class => "form-control", required: true, placeholder: "Email", autofocus: true %>
								</div>
								<div class="col-sm-1"></div>
							</div>
							<div class="row formSpace2"> 
								<div class="col-sm-1"></div>
								<div class="col-sm-10">
							 		<%= f.submit "Send me reset password instructions", class: "btn btn-default btn-success longButton2" %> 
								</div>
								<div class="col-sm-1"></div>
							</div>
					    <% end %> 
				  </div> 
				</div>	
			</div>
		<div class="col-sm-4"></div>
	</div>
</div>
