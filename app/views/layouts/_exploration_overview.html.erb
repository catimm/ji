<% @exploration_user.each do |d| %>
	<div class="row explorationOverview">
			<div class="col-sm-4">
				<div class="packageLeft" style="background-image: url(<%= d.exploration.picture %>)"></div>
			</div>
			<div class="col-sm-8">
					<div class="row explorationTitle">
						<div class="col-sm-12">
							<h3><%= d.exploration.title %></h3>
						</div>
					</div>
					<div class="row explorationExplorer">
						<div class="col-sm-3">
							<h6 class="gray"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= d.exploration.explorer.user.first_name %> <%= d.exploration.explorer.last_name %></h6>
						</div>
						<div class="col-sm-3">
							<h6 class="gray"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= d.exploration.explorer.city %>, <%= d.exploration.explorer.state %></h6>
						</div>
						<div class="col-sm-6"></div>
					</div>
					<div class="row explorationDescription">
						<h5 class="gray"><%= d.exploration.description %></h5>
					</div>
					<div class="row explorationStats">
						<div class="col-sm-2">
							<h3><%= @completed %>%</h3>
							<h6 class="gray">complete</h6>
						</div>
						<div class="col-sm-2">
							<h3><%= @people %></h3>
							<h6 class="gray">participants</h6>
						</div>
						<div class="col-sm-2">
							<h3><%= @days_left %></h3>
							<h6 class="gray">days to go</h6>                                                                         
						</div>
						<div class="col-sm-5">
							<%= form_for @start, url: {action: "update"} do |f| %>
							  <%= f.hidden_field :id, value: d.id %>
							  <%= f.hidden_field :category, value: d.exploration.category %>
							  <%= f.hidden_field :started, value: @time %>
							  <%= f.submit value: "Provide input", class: "btn btn-success inputButton" %>
							<% end %>
						</div>
						<div class="col-sm-1"></div>
					</div>
				
			</div>
			<div class="col-sm-0"></div>
		</div> 
<% end %>