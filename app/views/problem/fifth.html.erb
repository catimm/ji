<div class="intro-header"></div>
<div id="section wrap">
	<%= render 'layouts/header' %> 
	<div class="container mainBody">
		<div class="row">
			<div class="page-header">
			  <h2>Step 5 of 8: Finding a craft beer you like</h2>
			</div>
		</div>
		<%= form_for @written, url: step6_path  do |f| %>
		<div class="row">
			<div class="col-sm-1"></div>
			<div class="col-sm-5">
				<div class="row">
					<camera id='jithree' class="show" data-app-id='a-ea644890-87df-0132-10ec-22000a8c0328' data-sources='record,upload' data-maxlength='300' style='width:480px;height:270px;' data-poll-for-processed='true'></camera>
					<%= f.text_area :written_input, required: true, id: "textInputArea5", :class => "form-control textInputArea hidden", placeholder: "Type input here" %>
				</div>
				<div class="row">
					<h6 class="emailContact">Questions? Email me: ctiv@hotmail.com</h6>
				</div>
			</div>
			<div class="col-sm-5">
				<div class="row textArea">
					<h5 class="specialFontSize">How often when you order/buy beer do you end up with something you like?</h5> 
					<h5 class="specialFontSize">Do you do anything to help make sure you are happy with your beer choice?</h5>  
					<h5 class="specialFontSize">Why or why not?</h5>
					</br>
					</br>
					<h5 class="specialFontSize">Please use the webcam to share your thoughts. <span id="noWebcam" class="noWebcam five">(<span>Wait! I don't have a webcam...</span>)</span></h5>
				</div>
				<div class="row buttonArea">
					<%= f.hidden_field :step, value: 5 %>
					<%= f.submit id: "step5Button", value: "Take me to Step 6", class: "btn btn-success inputButton2", disabled: "true" %>
				</div>	
			</div>
			<div class="col-sm-1"></div>
		</div>
		<% end %>
	</div>
</div>