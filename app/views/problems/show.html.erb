<%= render 'layouts/header' %> 
<div class="container">
	<% if @step == "intro" %>
		<%= render 'intro' %>
	<% elsif @step == "first" %>
		<%= render 'first' %>
	<% elsif @step == "second" %>
		<%= render 'second' %>
	<% elsif @step == "fourth" %>
		<%= render 'fourth' %>
	<% elsif @step == "fifth" %>
		<%= render 'fifth' %>
	<% elsif @step == "sixth" %>
		<%= render 'sixth' %>
	<% elsif @step == "seventh" %>
		<%= render 'seventh' %>
	<% else %>
		<%= render 'ninth' %>
	<% end %>
</div>
<%= render 'layouts/footer' %>